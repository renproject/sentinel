{
    "name": "burn-sentry",
    "version": "1.0.0",
    "description": "Burn sentry",
    "main": "build/main/index.js",
    "typings": "build/main/index.d.ts",
    "module": "build/module/index.js",
    "repository": "https://github.com/renproject/burn-sentry",
    "license": "MIT",
    "keywords": [],
    "scripts": {
        "build": "run-s clean && run-p build:*",
        "build:main": "tsc -p tsconfig.json",
        "fix": "run-s fix:*",
        "fix:prettier": "prettier \"src/**/*.ts\" --write --tab-width 4",
        "fix:tslint": "tslint --fix --project .",
        "lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different --tab-width 4",
        "forever": "yarn build:main && forever ./build/main/index.js simple --color",
        "start": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_OPTIONS=--max-old-space-size=4096 yarn forever",
        "clean": "rimraf build"
    },
    "engines": {
        "node": ">=8.9"
    },
    "dependencies": {
        "@bitjson/typedoc": "^0.15.0-0",
        "@renproject/chains": "^2.5.12",
        "@renproject/interfaces": "^2.5.10-1",
        "@renproject/ren": "^2.5.12",
        "@sentry/node": "^6.13.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^16.10.3",
        "@types/pg": "^8.6.1",
        "@types/pg-promise": "^5.4.3",
        "axios": "^0.22.0",
        "bignumber.js": "^9.0.1",
        "blake2b": "https://github.com/ren-forks/blake2b#f68a3a2ea0ead89086f96195bc55dc41b4505245",
        "chalk": "^4.1.2",
        "codecov": "^3.8.3",
        "cors": "^2.8.5",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "forever": "^4.0.1",
        "gh-pages": "^3.2.3",
        "immutable": "^4.0.0-rc.15",
        "moment": "^2.29.1",
        "npm-run-all": "^4.1.5",
        "pg": "^8.7.1",
        "pg-promise": "^10.11.0",
        "prettier": "^2.4.1",
        "send-crypto": "^0.2.33",
        "standard-version": "^9.3.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-immutable": "^6.0.1",
        "typescript": "^4.4.3",
        "web3": "^2.0.0-alpha.1",
        "web3-providers": "^2.0.0-alpha.1",
        "winston": "^3.3.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "prettier": {
        "singleQuote": false,
        "trailingComma": "all",
        "tabWidth": 4
    },
    "devDependencies": {
        "rimraf": "^3.0.2",
        "tslint-microsoft-contrib": "^6.2.0"
    }
}
