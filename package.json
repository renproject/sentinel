{
    "name": "sentinel",
    "version": "1.0.0",
    "description": "RenVM event watcher.",
    "main": "build/main/index.js",
    "typings": "build/main/index.d.ts",
    "module": "build/module/index.js",
    "repository": "https://github.com/renproject/sentinel",
    "license": "MIT",
    "keywords": [],
    "scripts": {
        "build": "run-s clean && run-p build:*",
        "build:main": "tsc -p tsconfig.json",
        "fix": "run-s fix:*",
        "fix:prettier": "prettier \"src/**/*.ts\" --write --tab-width 4",
        "fix:tslint": "tslint --fix --project .",
        "lint": "tslint --project . && prettier \"src/**/*.ts\" --list-different --tab-width 4",
        "forever": "yarn build:main && forever ./build/main/index.js simple --color",
        "start": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_OPTIONS=--max-old-space-size=4096 yarn forever",
        "clean": "rimraf build"
    },
    "engines": {
        "node": ">=8.9"
    },
    "dependencies": {
        "@renproject/chains": "^3.0.0-alpha.31",
        "@renproject/chains-solana": "^3.0.0-alpha.31",
        "@renproject/provider": "^3.0.0-alpha.31",
        "@renproject/ren": "^3.0.0-alpha.31",
        "@renproject/utils": "^3.0.0-alpha.31",
        "@sentry/node": "^6.13.2",
        "@types/node": "^16.10.3",
        "@types/pg": "^8.6.1",
        "@types/source-map-support": "^0.5.4",
        "bignumber.js": "^9.0.2",
        "chalk": "^4.1.2",
        "codecov": "^3.8.3",
        "cz-conventional-changelog": "^3.3.0",
        "dotenv": "^10.0.0",
        "forever": "^4.0.1",
        "moment": "^2.29.1",
        "npm-run-all": "^4.1.5",
        "pg": "^8.7.1",
        "prettier": "^2.4.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "source-map-support": "^0.5.21",
        "standard-version": "^9.3.1",
        "strip-ansi": "^6.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "tslint-immutable": "^6.0.1",
        "tslint-microsoft-contrib": "^6.2.0",
        "typeorm": "^0.3.6",
        "typeorm-naming-strategies": "^4.1.0",
        "typescript": "^4.5.5",
        "winston": "^3.3.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "endOfLine": "lf",
        "arrowParens": "always"
    }
}
